# SafeYield Vault Environment Configuration
# Copy this to .env and fill in your values

# ===================
# BLOCKCHAIN CONFIG
# ===================
# Alchemy API Key (mainnet)
ALCHEMY_API_KEY=your_alchemy_key_here

# RPC URLs
RPC_URL=https://eth-mainnet.g.alchemy.com/v2/your_alchemy_key
WS_PROVIDER=wss://eth-mainnet.g.alchemy.com/v2/your_alchemy_key

# For testnet (Sepolia)
SEPOLIA_RPC_URL=https://eth-sepolia.g.alchemy.com/v2/your_alchemy_key

# ===================
# WALLET CONFIG
# ===================
# Agent wallet private key (WITHOUT 0x prefix)
# ⚠️ Use a dedicated wallet, NOT your main wallet!
PRIVATE_KEY=your_64_character_hex_private_key

# ===================
# DATABASE CONFIG
# ===================
# PostgreSQL connection string
# Supabase: postgresql://postgres:[PASSWORD]@db.[PROJECT].supabase.co:5432/postgres
# Neon: postgresql://[USER]:[PASSWORD]@[HOST]/[DATABASE]
DATABASE_URL=postgresql://user:password@host:5432/database

# ===================
# AI CONFIG
# ===================
# Anthropic API Key (for Claude risk analysis)
ANTHROPIC_API_KEY=your_anthropic_key

# ===================
# CONTRACT ADDRESSES
# ===================
# Fill these after deployment
VAULT_ADDRESS=0x...
RISK_ORACLE_ADDRESS=0x...

# Strategy addresses
AAVE_STRATEGY_ADDRESS=0x...
COMPOUND_STRATEGY_ADDRESS=0x...
MAKER_STRATEGY_ADDRESS=0x...
LOOP_STRATEGY_ADDRESS=0x...

# ===================
# EXTERNAL SERVICES
# ===================
# Discord webhook for alerts (optional)
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/...

# Telegram bot (optional)
TELEGRAM_BOT_TOKEN=your_bot_token
TELEGRAM_CHAT_ID=your_chat_id

# ===================
# API CONFIG
# ===================
JWT_SECRET=generate_a_random_32_char_string
API_PORT=8000

# ===================
# NETWORK
# ===================
# 1 = mainnet, 11155111 = sepolia
CHAIN_ID=1
