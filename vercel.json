{
  "version": 2,
  "builds": [
    { "src": "api/**/*.js", "use": "@vercel/node" },
    { "src": "frontend/**", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/(.*)", "dest": "/frontend/$1" }
  ],
  "env": {
    "NEWS_API_KEY": "@news-api-key",
    "OPENAI_API_KEY": "@openai-api-key",
    "COINGECKO_API_KEY": "@coingecko-api-key"
  }
}
