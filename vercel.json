{
  "version": 2,
  "builds": [
    {
      "src": "api/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "api/research.js",
      "use": "@vercel/node"
    },
    {
      "src": "api/safe-yield.js",
      "use": "@vercel/node"
    },
    {
      "src": "**/*.html",
      "use": "@vercel/static"
    },
    {
      "src": "css/**/*",
      "use": "@vercel/static"
    },
    {
      "src": "js/**/*",
      "use": "@vercel/static"
    },
    {
      "src": "assets/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(news|trending|chat|health|signals|alpha-scanner|alpha-scanner-v2)",
      "dest": "/api/index.js"
    },
    {
      "src": "/api/research/(insights|alpha-scan)",
      "dest": "/api/research.js"
    },
    {
      "src": "/api/safe-yield/(status|strategies|simulate|risk)",
      "dest": "/api/safe-yield.js"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ]
}
